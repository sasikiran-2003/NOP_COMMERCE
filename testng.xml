<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="nopCommerce Test Suite" parallel="tests" thread-count="1">
    <parameter name="browser" value="chrome"/>
    
    <listeners>
        <listener class-name="com.aventstack.extentreports.testng.listener.ExtentITestListenerClassAdapter"/>
    </listeners>
    
    <test name="Register Tests">
        <classes>
            <class name="com.nopcommerce.tests.RegisterTest"/>
        </classes>
    </test>
    
    <test name="Login Tests">
        <classes>
            <class name="com.nopcommerce.tests.LoginTest"/>
        </classes>
    </test>
    
    <test name="Product Tests">
        <classes>
            <class name="com.nopcommerce.tests.ProductTest"/>
        </classes>
    </test>
    
    <test name="Cart Tests">
        <classes>
            <class name="com.nopcommerce.tests.CartTest"/>
        </classes>
    </test>
    
    <test name="Checkout Tests">
        <classes>
            <class name="com.nopcommerce.tests.CheckoutTest"/>
        </classes>
    </test>
    
    <!-- For now, let's disable parallel execution to avoid issues -->
    <!-- <test name="Cucumber Tests">
        <classes>
            <class name="com.nopcommerce.tests.cucumber.runner.TestRunner"/>
        </classes>
    </test> -->
</suite>